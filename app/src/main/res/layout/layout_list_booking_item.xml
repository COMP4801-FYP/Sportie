<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp"
    android:paddingHorizontal="20dp"
    android:layout_marginEnd="15dp"
    android:orientation="horizontal"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_event_note_24"
                android:layout_gravity="bottom"/>

            <TextView
                android:id="@+id/bookingno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Booking "
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="- Sportcentre"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:id="@+id/txt_booking_sportctr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Name"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat_regular"/>
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="- Court No"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:id="@+id/txt_booking_court"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Court No"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat_regular"/>
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="- Address"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:id="@+id/txt_booking_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Address of sport venue"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat_regular"/>
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="- District"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:id="@+id/txt_booking_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="KennedyTown"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat_regular"/>
        </LinearLayout>


        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="- Date"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:id="@+id/txt_booking_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="15/03/2023"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat_regular"/>
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="- Time"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:id="@+id/txt_booking_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="12:00"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/modifyBtn"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:text="Modify"
                android:background="@drawable/button_round_corner"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delBtn"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Delete"
                android:background="@drawable/button_round_corner2"
                android:textColor="@color/white"

                android:textSize="15sp"
                android:fontFamily="@font/montserrat_bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/billPendingAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>